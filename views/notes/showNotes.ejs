<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <title>NotesPedia</title>
  </head>
  <body>
    <%- include("../includes/commonNav.ejs") %> <%-
    include("../includes/flash.ejs")%>;

    <!-- Container for the grid -->
    <div class="container mt- mb-5">
      <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 g-2">
        <!-- Use g-2 to control grid gap -->
        <% for(let notes of showAllNotes){ %>
        <div class="col">
          <div class="card" style="width: 16rem">
            <img src="../images/upload.png" class="card-img-top" alt="..." />
            <div class="card-body">
              <p class="text-center"><b><%= notes.title %></b></p>
              <a
                href="/listnotes/<%=notes._id%>"
                class="btn btn-danger offset-4"
                >Explore</a
              >
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <%- include("../includes/footer.ejs") %>;
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
